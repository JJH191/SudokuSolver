<Window x:Class="SudokuSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudokuSolver"
        mc:Ignorable="d"
        Title="Sudoku Solver" Height="450" Width="700" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">
    <Grid Margin="25">
        <!-- Provides a window and frame to contain the current page with a border of 25 -->
        <Frame x:Name="FrmContent" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
