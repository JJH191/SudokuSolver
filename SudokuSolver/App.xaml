<Application x:Class="SudokuSolver.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SudokuSolver"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <BitmapImage x:Key="BlankSudoku" UriSource="res/blank-sudoku-grid.png" />
        <Style TargetType="{x:Type FrameworkElement}" x:Key="baseStyle">
            <Setter Property="TextElement.FontFamily" Value="res/Barlow/#Barlow" />
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource baseStyle}"></Style>
    </Application.Resources>
</Application>
