<Page x:Class="SudokuSolver.ImageAdjustmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SudokuSolver"
      xmlns:viewmodels="clr-namespace:ViewModels;assembly=ViewModels"
      mc:Ignorable="d" 
      Title="ImageAdjustmentsPage">
    <Page.DataContext>
        <viewmodels:SudokuImageViewModel/>
    </Page.DataContext>

    <StackPanel>
        <Canvas x:Name="canvas" 
                Width="{Binding BitmapImage.Width, Mode=OneWay}" Height="{Binding BitmapImage.Height, Mode=OneWay}" 
                MouseMove="canvas_MouseMoved" MouseDown="canvas_MouseDown" MouseUp="canvas_MouseUp">
            <Image x:Name="image" Source="{Binding BitmapImage}"/>
        </Canvas>
        <Slider x:Name="slider" Width="400" Maximum="1" ValueChanged="Slider_ValueChanged" Margin="0,10,0,0" Value="{Binding Threshold}" LargeChange="0.1"/>
    </StackPanel>
</Page>
